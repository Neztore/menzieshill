<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Login</title>
    <link rel="stylesheet" type="text/css" href="/css/global.css">
    <link rel="stylesheet" type="text/css" href="/css/bulma.min.css">
    <link rel="stylesheet" type="text/css" href="/css/register.css">

    <script src="/js/index.js"></script>
    <script src="/js/apiFetch.js"></script>
    <script src="/js/login.js"></script>
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
</head>
<body>
<%- include('../shared/partials/navbar.ejs'); %>
<section class="section">
    <div class="columns">

        <div class="column is-half is-offset-one-quarter">


            <div class="login-container box">

                <h1 class="is-size-2 has-text-centered">Login</h1>
                <p class="has-text-centered">Use this form to login to your existing account. You can use either your username or your email to login.</p>
                <hr>

                <div class="notification is-danger error-box" hidden></div>
                <form class="form">
                    <div class="field">
                    <label class="label" for="username">Username</label>
                        <div class="control">
                            <input class="input" type="text" placeholder="Username" id="username" max="50">
                            <p class="help">You can use your username or email here.</p>
                        </div>
                    </div>

                    <div class="field">
                    <label class="label" for="password">Password</label>
                        <div class="control">
                            <input class="input" type="password" placeholder="Your password" name="password" id="password" min="6">
                        </div>
                        <div class="control">
                            <label class="checkbox">
                                <input type="checkbox" id="show-pass">
                                Show password
                            </label>
                        </div>
                    </div>


                    <div class="field">
                        <div class="control">
                            <input class="button is-link g-recaptcha" type="submit" id="submit" value="Submit" data-sitekey="6LePDMsUAAAAAHZT30VD-yAfVwsKfJJhG9DpZg9M" data-callback="onSubmit"/>
                        </div>
                    </div>



                </form>
            </div>
            <p class="has-text-centered has-text-grey"><a href="/register">Create an account</a></p>
        </div>
    </div>
</section>


<!-- Footer-->
<%- include('../shared/partials/footer.ejs'); %>

</body>
</html>
